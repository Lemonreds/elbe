/**app.wxss**/
@import '/fonts/iconfonts.wxss';
@import '/fonts/montserrat.wxss';


page {
  font-family: 'Montserrat', 'Microsoft YaHei';
  background: #f5f5f5;
}

view {
  background: #fff;
}

text{
  display: inline;
}

button {
  outline: none;
  border-radius: 0;
  border: none;
}

button::after {
  border: none;
}


.fixedButton {
  margin: 0;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 10vh;
  line-height: 10vh;
  text-align: center;
  background: #428bca;
  font-size: 32rpx;
  color: #fff;
  z-index: 999;
}

.container {
  background: #f5f5f5;
  min-height: 100vh;
}

.footer {
  width: 100%;
  text-align: center;
  color: gray;
  margin: 20px 0;
  background: #f5f5f5;
  font-size: 22rpx;
}



/* align */

.center {
  text-align: center;
}

.right {
  text-align: right;
}

/* box */

.ml-5 {
  margin-left: 5px;
}

.ml-10 {
  margin-left: 10px;
}

/* text */

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* temp */

.block {
  margin: 8px 8px 18px 8px;
  padding: 0 10px;
  border: 1px solid #f3f3f3;
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.01);
  border-radius: 2px;
}

.block-item {
  padding: 10px 6px;
  border-bottom: 1px solid #f8f8f8;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.block-title {
  font-size: 32rpx;
  color: #111;
}

.black-text {
  color: #333;
  font-size: 30rpx;
}

.blue-text {
  color: #428bca;
  font-size: 30rpx;
}

.gray-text {
  color: #666;
  font-size: 30rpx;
}

.red-text {
  color: #e26d6d;
  font-size: 29rpx;
}

.text-main {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.text-minor {
  font-size: 12px;
  color: gray;
}

.text-hint {
  padding: 3px 6px;
  font-size: 23rpx;
  color: #fff;
  background: #428bca;
  border: 1px solid #fff;
  border-radius: 2px;
}

/* flex */

.flex-center {
  display: flex;
  align-items: center;
}

.flex-center-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-center-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.foods-item {
  display: flex;
  align-items: center;
}

.foods-item>.name {
  word-break: break-all;
  font-size: 29rpx;
  color: #333;
  margin-left: -32rpx;
}

.foods-item>image {
  width: 98rpx;
  height: 98rpx;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -ms-border-radius: 4px;
  -o-border-radius: 4px;
}

.foods-item>.count {
  font-size: 24rpx;
  color: #666;
}

.foods-item>.price {
  font-size: 26rpx;
  color: #e26d6d
}

.foods-total {
  width: 100%;
  text-align: right;
  color: #666;
  font-size: 30rpx;
}