.gray-text {
    min-width: 15%;
    font-size: 24rpx;
}

.block {
    padding-top: 18px;
    padding-bottom: 18px
}

.block-item {
    border-bottom: none;
}

input {
    color: gray;
    font-size: 24rpx;
    padding: 2px 6px;
    border: none;
    align-items: flex-end;
    border-bottom: 1px solid #ddd;
}

.info {
    background: #f5f5f5;
}

.header {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    background: #f5f5f5
}

.header .name {
    margin: 10px 0;
    font-size: 32rpx;
    color: #555;
}

.header image {
    width: 60px;
    height: 60px;
    margin-top: 10px;
    border-radius: 4px;
}

.submit {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    text-align: center;
    background: #5fa9ed;
    height: 10vh;
    line-height: 10vh;
    color: #fff;
    font-size: 32rpx;
}