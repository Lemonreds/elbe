.tags {
    background: #f5f5f5;
    margin-bottom: 10px;
    position: relative;
}

.tags text {
    margin: 0 4px;
    padding: 4px 6px;
    border-radius: 2px;
    background: #5fa9ed;
    font-size: 26rpx;
    color: #fff;
    cursor: pointer;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    -ms-border-radius: 2px;
    -o-border-radius: 2px;
}

.tags .active {
    background: #52b13c;
    color: #fff;
}


.nothing {
    position: absolute;
    left: 50%;
    top: 50%;
    background: #f5f5f5;
    color: gray;
    font-size: 32rpx;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
}

.order {
    background: #f5f5f5;
    min-height: 90vh;
}

.item {
    padding: 16px 18px;
    margin: 18px 6px;
    border-radius: 2px;
    border-bottom: 1px solid #f3f3f3;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    -ms-border-radius: 2px;
    -o-border-radius: 2px;
}

.item view {
    margin-bottom: 4px;
}

.item .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item .meta text {
    font-size: 24rpx;
    color: gray;
}

.item .receive,
.item .rider {
    display: flex;
    align-items: center;
}

.item .receive text,
.item .rider text {
    font-size: 26rpx;
    color: #666
}



.item .info {
    display: flex;
    justify-content: flex-end;
    flex-direction: column;
    align-items: flex-end;
}

.item .info text {
    font-size: 24rpx;
    color: gray
}

.price {
    color: #e26d6d !important
}

.details text {
    font-size: 24rpx;
    color: #888;
}

.foods .foods-item {
    display: flex;
    align-items: center;
}

.foods .foods-meta {
    margin-left: 20px;
    display: flex;
    justify-content: flex-end;
    padding-right: 10px;
    flex: 1
}


.operate {
    display: flex;
    justify-content: flex-end;
}

.operate button {
    width: 15vw;
    margin: 0;
    margin-left: 4px;
    font-size: 24rpx;
    padding: 0px 2px;
}

.operate .shipping {
    color: #fff;
    background: #5fa9ed;
}

.operate .complete {
    color: #fff;
    background: #52b13c;
}

.popButton {
    display: block;
    width: 80%;
    margin: 16px auto 0 auto;
    background: #5fa9ed;
    color: #fff;
    font-size: 30rpx;
}

.riders {
    padding: 20px 10px;
}

.riders p {
    font-size: 30rpx;
    font-weight: 700;
    color: gray;
    text-align: center;
    width: 100%;
    height: 20px;
    margin-bottom: 20px;
}