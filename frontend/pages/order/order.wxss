.container {
  margin-top: 0
}

.orderType {
  background: #f5f5f5;
  padding: 10px 0;
  display: flex;
  align-items: center;
  height: 20px;
  background: #428bca
}

.orderType view {
  display: inline-block;
  padding: 4px 4px 0 6px;
  font-size: 24rpx;
  color: #fff;
  background: #428bca;
  transition: all .4s ease-in-out;
  border: 1px solid transparent;
  border-radius: 2px;

}

.orderType .active {
  color: #fff;
  border-bottom: 2px solid #fff;

}

.order-item {
  border-radius: 2px;
  margin: 10px 10px;
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.05);
}

.order-details {
  display: flex;
  justify-content: center;
  margin: 14px 8px 10px 0;
  padding: 14px 10px;
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
}

.order-details>.icon {
  width: 96rpx;
  height: 96rpx;
  margin: 8px 4px 0 0;
  border-radius: 4px;
}

.order-details>.details {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  margin-left: 12px;
}

.canteen {
  font-size: 30rpx;
  color: #333;
}

.date {
  font-size: 24rpx;
  color: #666;
}



.desc {
  font-size: 24rpx;
  color: gray;
}

.amount {
  font-size: 26rpx;
  color: #e26d6d;
}

.order-left {
  padding: 12px 0;
  font-size: 30rpx;
  text-align: center;
  border-top: 1px solid #f3f3f3;
  border-bottom: 1px solid #f3f3f3;
}

.active {
  color: #333;
}

.inactive {
  color: #ddd;
}

.operate {
  margin-bottom: 8px;
  width: 100%;
  text-align: right;
}

.operate>button {
  font-size: 22rpx;
  color: #fff;
  background: #428bca;
  display: inline-block;
  margin-right: 8px;
}

.operate>button:last-child {
  background: #e26d6d
}

/* status */
.status {
  font-size: 25rpx;
}

.status-0 {
  color: #e26d6d
}

.status-1,
.status-2 {
  color: #428bca
}

.status-3,
.status-4 {
  color: gray;
}