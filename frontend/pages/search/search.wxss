.header {
  padding: 10px 6px;
  border-bottom: 1px solid #f1f1f1;
  background: #428bca;
  display: flex;
  align-content: center;
}

.header .input {
  padding: 6px 10px;
  width: 80%;
  margin: 0 auto;
  background: #f1f1f1;
  font-size: 26rpx;
  border-radius: 2px;
}

.header .bttn {
  width: 14%;
  color: #fff;
  background: #428bca;
  font-size: 28rpx;
  letter-spacing: 1px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.history {
  margin: 6px 0;
  padding: 4px 10px;
  background: #f5f5f5;
  display: flex;
}


.history .item {
  margin-right: 6px;
  padding: 4px 8px;
  font-size: 23rpx;
  color: #fff;
  background: #428bca;
  border: 1px solid #fff;
  border-radius: 2px;
}


.search {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  background: #f5f5f5;
}

.search text {
  padding: 6px 8px;
  font-size: 28rpx;
  color: gray;
  font-weight: 600;
  display: block;
  width: 100%;
}

.search i {
  font-size: 36rpx;
  color: #e26d6d;
}

.content .title {
  display: block;
  font-size: 32rpx;
  background: #f5f5f5;
  color: gray;
  padding-left: 26rpx;
}

.c-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 14px;
  border-top: 1px solid #f3f3f3;
  border-bottom: 1px solid #f3f3f3;
}

.c-main {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  margin-left: 18px;
}

.c-main .name {
  font-weight: 500;
  margin: 4px 0;
  color: #666;
  font-size: 28rpx;
}

.c-main .info {
  color: gray;
  font-size: 24rpx;
}

.c-item .c-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 4px;
}

.c-item .price {
  font-size: 26rpx;
  color: #e26d6d;
  margin-right: 4px;
}