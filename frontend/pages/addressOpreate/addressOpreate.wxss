.delete {
  padding: 12px 10px;
  text-align: right;
}

.delete i {
  color: #e26d6d;
  font-size: 36rpx
}

.inner {
  margin: 15px 0;
}

.item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f8f8f8;
  padding: 10px 12px;
}

.title {
  width: 16%;
  min-width: 16%;
  font-size: 28rpx;
  text-align: center;
  color: #222;
}

.item-main {
  margin-left: 5%;
  font-size: 28rpx;
  color: #666;
}

.tag {
  color: #333;
  background: #fff;
  padding: 6px 10px;
  margin-right: 4px;
  border-radius: 4px;
  border: 1px solid #f1f1f1;
}

.tag-active {
  color: #fff;
  background: #428bca;
}